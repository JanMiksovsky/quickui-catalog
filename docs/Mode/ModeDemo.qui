<Control className="ModeDemo">

<content>
    
    <Mode ref="switchMode" maximize="true">
        <input type="text" ref="textEditable" value="Hello, world." />
        <div ref="textReadOnly" />
    </Mode>
    
    <input type="radio" name="mode" ref="modeEdit" checked="checked" />
    <label for="modeEdit">Editable</label>
    <input type="radio" name="mode" ref="modeRead" />
    <label for="modeRead">Read-only</label>
    
</content>

<style>
.textReadOnly {
    padding: 3px;
}
</style>

<script>
ModeDemo.prototype.extend({
    initialize: function() {
        var self = this;
        this.$modeEdit().click(function(event) {
            self.$switchMode().activeIndex(0);
        });
        this.$modeRead().click(function(event) {
            self.$textReadOnly().content(self.$textEditable().content());
            self.$switchMode().activeIndex(1);
        });
    }
});
</script>

</Control>
