<Control name="TransientMessageDemo">

<content>
    <a id="link">Click for a message</a>
</content>

<style>
#link {
    cursor: pointer;
}
</style>

<script>
TransientMessageDemo.prototype.extend({
    initialize: function() {
        this.$link().click( function() {
            TransientMessage.showMessage( "This transient message will go away on its own." );
        });
    }
});
</script>

</Control>
