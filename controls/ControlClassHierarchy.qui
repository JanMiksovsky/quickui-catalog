<Control name="ControlClassHierarchy">

<content>
    <List id="classList" itemClass="CatalogLink"/>
</content>

<style>
.CatalogLink {
    margin-left: 1em;
}
.CatalogLink:first-child {
    margin-left: inherit;
}
</style>

<script>
ControlClassHierarchy.prototype.extend({
    
    controlClass: Control.property[ "class" ]( function( controlClass ) {
        var classes = controlClass.classHierarchy().split( " " );
        this.$classList().items( classes );
    })

});
</script>

</Control>
